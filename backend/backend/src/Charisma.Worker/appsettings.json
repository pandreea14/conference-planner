{
  "ConnectionStrings": {
    "App_Database": "###",
    "Log_Database": "###"
  },
  "MultiTenancy": {
    "TenancyType": "MultiTenant" // "MultiTenant", "MonoTenant"
  },
  "Messaging": {
    "TopicPrefix": "LSNG.DEV.",
    "Source": "Charisma.Worker",
    "Transport": "Nats",
    "Nats": {
      "natsUrl": "nats://kube-worker1.totalsoft.local:31291",
      "cluster": "faas-cluster",
      "clientId": "Charisma_Worker",
      "qGroup": "Charisma.Worker",
      "durableName": "durable"
    }
  },
  "LongRunningCommandTimeoutMs": "150000",
  "Serilog": {
    "Properties": {
      "ServiceName": "Charisma.Worker"
    },
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System.Net": "Debug",
        "Grpc.Net": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Log_Database",
          "sinkOptionsSection": {
            "tableName": "__Logs",
            "schemaName": "dbo",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 5000
          },
          "restrictedToMinimumLevel": "Information",
          "columnOptionsSection": {
            "addStandardColumns": ["LogEvent"],
            "removeStandardColumns": ["MessageTemplate", "Properties"],
            "additionalColumns": [
              {
                "ColumnName": "ServiceName",
                "DataType": "varchar",
                "DataLength": 200
              },
              {
                "ColumnName": "TenantId",
                "DataType": "UniqueIdentifier"
              },
              {
                "ColumnName": "CorrelationId",
                "DataType": "UniqueIdentifier"
              }
            ]
          }
        }
      }
    ]
  },
  "OpenTelemetry": {
    "TracingEnabled": false,
    "EnrichSQLParameters": false,
    "Otlp": {
      "Endpoint": "<<OTLP_URL>>"
    }
  },
  "Caching": {
    "Provider": "Memory", // Accepted values: Memory, Redis. String empty is Memory
    "ServerAddress": "kube-worker1.totalsoft.local:32509",
    "InstanceName": "CharismaWorker",
    "LocalVersionCacheExpirationSeconds": 30
  }
}
